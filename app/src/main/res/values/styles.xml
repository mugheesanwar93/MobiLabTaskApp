<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/textColorSecondary</item>
        <item name="windowNoTitle">true</item>
        <item name="android:title">""</item>
    </style>

    <style name="ButtonBg">
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomDialogTheme" parent="Base.Theme.AppCompat.Dialog" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RadioButtonBg">
        <item name="android:drawableStart">@drawable/bg_radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/twenty_dp</item>
        <item name="android:padding">@dimen/ten_dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
